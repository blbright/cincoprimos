<div class="alert alert-dismissible alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong><%= notice %></strong>
</div>

<p>
  <strong><%= @reservation.user.name %>'s Reservation:</strong>

</p>

<p>
  <strong>Start Date:</strong>
  <%= @reservation.start_date.strftime("%d") %> <%= @reservation.start_date.strftime("%b") %> <%= @reservation.start_date.strftime("%Y") %>
</p>

<p>
  <strong>End Date:</strong>
  <%= @reservation.end_date.strftime("%d") %> <%= @reservation.end_date.strftime("%b") %> <%= @reservation.end_date.strftime("%Y") %>
</p>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Comments on this Reservation:
      </th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><strong><%=comment.reservation.user.name%>: </strong><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>

<%= link_to 'Comment on this Reservation', new_reservation_comment_path(@reservation) %><br>

<%= link_to 'Edit Reservation Dates', edit_reservation_path(@reservation) %> |
<%= link_to 'Back to Home', checkins_path %>


