<div class="container">
<p id="notice"><%= notice %></p>
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
<ul class="nav navbar-nav navbar-right">
  <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
  <li><%= link_to 'Edit Account',edit_user_registration_path %></li>
</ul>
</div>

<div class="column" id="checkins">

<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>Checkins:<br>
      <%= link_to 'New Checkin', new_checkin_path %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= checkin.user.name %> checked in ON <%= checkin.created_at.strftime("%d") %> <%= checkin.created_at.strftime("%b") %> <%= checkin.created_at.strftime("%Y") %> AT <%= checkin.created_at.strftime("%I") %>:<%= checkin.created_at.strftime("%M") %> <%= checkin.created_at.strftime("%p") %> </td>
        <td><%= link_to 'Show', checkin %></td>
        <td><%= link_to 'Remove', checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>

<div class="column" id="checkouts">

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Checkouts:
      <br>
      <%= link_to 'New Checkout', new_checkout_path %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @checkouts.each do |checkout| %>
      <tr>
        <td><%= checkout.user.name %> checked out ON <%= checkout.created_at.strftime("%d") %> <%= checkout.created_at.strftime("%b") %> <%= checkout.created_at.strftime("%Y") %> AT <%= checkout.created_at.strftime("%I") %>:<%= checkout.created_at.strftime("%M") %> <%= checkout.created_at.strftime("%p") %> </td>
        <td><%= link_to 'Show', checkout %></td>
        <td><%= link_to 'Remove', checkout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>

<div class="column" id="reservations">

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Reservation Requests:<br>
      <%= link_to 'New Reservation Request', new_reservation_path %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user.name %> would like to reserve FROM <%= reservation.start_date.strftime("%d") %> <%= reservation.start_date.strftime("%b") %> <%= reservation.start_date.strftime("%Y") %> TO <%= reservation.end_date.strftime("%d") %> <%= reservation.end_date.strftime("%b") %> <%= reservation.end_date.strftime("%Y") %> </td>
        <td><%= link_to 'Details', reservation %></td>
        <td><%= link_to 'Change Dates', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Remove', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>


      </tr>
    <% end %>

  </tbody>
</table>


</div>
</div>






